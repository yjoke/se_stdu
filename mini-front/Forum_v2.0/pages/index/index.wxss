page{
	width: 100%;
	height: 100%;
  }
  /* 分栏背景色 */
  .nav{
  width: 100%;
  align-items: center;
	height: 70rpx;
  background-color: #d3d1cd;
  /*opacity: 0.9;*/
	display: flex;
	flex-direction: row;
  justify-content: space-around;
  border-radius: 3%;
  border:1px solid rgba(143, 137, 137, 0.308);
  }
  /* 分栏字体颜色 */
  .item{
  font-size: 32rpx;
	color: rgb(252, 252, 252);
	height: 50rpx;
	width: 130rpx;
	line-height: 50rpx;
	align-self: center;
	text-align: center;
  }
  /* 分栏选中的背景 */
  .active{
	background-color: #e9190eee;
  border-radius: 8rpx;
  height:60rpx;
  width: 180rpx;
  border:1px solid white;
  }

  /* index 内容 */
  .page_row{
	display: flex;
	flex-direction: row
  }

  .postFirstImgUrl{
    border-radius: 2%;
    margin:3px;
    border: 3px solid rgb(255, 255, 255);
    margin-bottom: 2px;
  }

  .swiper{
	width: 100%;
  margin-top:1px;
  margin-left: 1px;
  margin-right: 1px;
  border-bottom:5rpx solid #cccccc;
  border-radius: 5%;
  }

  .hr{
  border-radius: 3%;
	height:2px;
	background-color: #cccccc;
	margin-top: 3px;
	margin-bottom: 3px;
  opacity: 0.2;
  }
  


   /* 分栏 */
   .con_list{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
  }
  .con_list .list{
	width: 50%;  /* width:50%;每行显示两列 */
	height: auto;
	text-align: center;
	margin-top: 20rpx;
  }
  /*帖子样式*/
  .postcss{
    background: gainsboro;
    margin: 8px;
    border-radius: 4%;
  }
  